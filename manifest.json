{
  "manifest_version": 3,
  "name": "AI Sidebar",
  "version": "1.0.0",
  "description": "Quick access to AI assistants via Chrome Side Panel",
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle AI Sidebar"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "windows",
    "storage",
    "clipboardWrite",
    "contextMenus"
  ],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle AI Sidebar"
    }
  }
}
